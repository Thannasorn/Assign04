<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Show_Gallery">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5DEDFF"
        android:text="Gallery Picture"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pic1"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p1" />

        <ImageButton
            android:id="@+id/pic2"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p2" />

        <ImageButton
            android:id="@+id/pic3"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p3" />

        <ImageButton
            android:id="@+id/pic4"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pic5"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p5" />

        <ImageButton
            android:id="@+id/pic6"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p6" />

        <ImageButton
            android:id="@+id/pic7"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p7" />

        <ImageButton
            android:id="@+id/pic8"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/p8" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ShowImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />
</LinearLayout>